{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real-time chat application with voice chat and private messaging",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "build:apk": "npm run cap:sync && npm run cap:open:android"
  },
  "keywords": ["chat", "realtime", "socket.io", "messaging"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "express-session": "^1.17.3",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/android": "^5.5.1"
  }
}
